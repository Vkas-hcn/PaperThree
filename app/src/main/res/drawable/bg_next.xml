<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">

            <corners android:radius="13dp"/>

            <gradient
                android:type="linear"
                android:startColor="#3DF1FE"
                android:centerColor="#8EA9FD"
                android:endColor="#F354FE"
                android:angle="0" />

        </shape>
    </item>

    <item android:left="4dp"
        android:right="4dp"
        android:top="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">

            <corners android:radius="13dp"/>

            <gradient
                android:type="linear"
                android:startColor="#656874"
                android:endColor="#3C414C"
                android:angle="0" />
            <padding android:top="12dp"
                android:bottom="12dp"/>

        </shape>
    </item>
</layer-list>