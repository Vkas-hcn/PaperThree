<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View" />

        <variable
            name="showLoading"
            type="Boolean"
            android:value="false" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#202227"
        tools:context=".b.ac.MainActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/wallPaperThreeMainTitle"
                android:layout_width="150dp"
                android:layout_height="22dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="49dp"
                android:src="@mipmap/wallpaper"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/wallPaperThreeMainSetRl"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:layout_marginEnd="28dp"
                android:src="@mipmap/pager_three_set"
                app:layout_constraintBottom_toBottomOf="@id/wallPaperThreeMainTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/wallPaperThreeMainTitle" />


            <com.youth.banner.Banner
                android:id="@+id/wallPaperThreeMainBanner"
                android:layout_width="match_parent"
                android:layout_height="156dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="28dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/wallPaperThreeMainTitle" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/wallPaperThreeMainImgList"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                app:layout_constraintBottom_toTopOf="@+id/native_frame_qr"
                app:layout_constraintTop_toBottomOf="@id/wallPaperThreeMainBanner"
                tools:layout_editor_absoluteX="10dp" />

            <LinearLayout
                android:id="@+id/ll_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="20dp"
                android:background="@drawable/orange_loading"
                android:visibility="@{showLoading ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_loading" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="loading, may contain ads"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textColor="#FFCDD2DE"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <FrameLayout
                android:id="@+id/native_frame_qr"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@mipmap/qqqaqaqa"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
