<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />


        <variable
            name="haveLoad"
            type="Boolean"
            android:value="false" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_light"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#202227">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/pagerThreeBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:scaleType="centerInside"
            android:src="@mipmap/backkkkkk"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_type_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personalize your wallpaper!Please select your preferred type."
            android:textColor="#FFFFFFFF"
            android:textSize="15sp"
            android:layout_marginTop="29dp"
            android:gravity="center"
            android:lineHeight="20dp"
            android:textStyle="bold"
            android:paddingHorizontal="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pagerThreeBack" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_light_pop"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="29dp"
            android:layout_marginBottom="29dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_next"
            app:layout_constraintTop_toBottomOf="@+id/tv_type_top"
            tools:layout_editor_absoluteX="26dp"
            tools:listitem="@layout/item_type" />
        <TextView
            android:id="@+id/tv_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="44dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/bg_next"
            android:gravity="center"
            android:paddingVertical="21dp"
            android:text="Next"
            android:textColor="#FFFFFFFF"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent" />
        <View
            android:id="@+id/view_load"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#33000000"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="@{haveLoad ? View.VISIBLE : View.GONE}"/>

        <LinearLayout
            android:id="@+id/ll_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/orange_loading"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp"
            android:visibility="@{haveLoad ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="loading, may contain ads"
                android:textColor="#FFCDD2DE"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
